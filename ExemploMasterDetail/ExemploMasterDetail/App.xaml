<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ExemploMasterDetail.App">
    <Application.Resources>
        
         <Style x:Key="EstiloLabel" TargetType="Label">
             <Setter Property="TextColor" Value="Red"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Center"/>

        </Style>
        <Style x:Key="EstiloLabel2" TargetType="Label" BasedOn="{StaticResource EstiloLabel}">
            <Setter Property="HorizontalOptions" Value="End"/>
        </Style>
        <Style  TargetType="Button">
             <Setter Property="TextColor" Value="Red"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Center"/>

        </Style>
     </Application.Resources>
</Application>